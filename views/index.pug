extends layout

block content
  #services-container
  #elusive-container
    img(src=elusive.url width=650 height=366)
    p Mission status : #{elusive.status}
  #misc-container
    audio(preload='metadata' id='audio-element' loop)
      source(src='http://music.meshup.net/hitman.mp3' type='audio/mpeg')
    #sound-icon
      img(src='/images/sound.png' title='play/pause music' onclick='audioControl()')
    if region == 'EU'
      #region-icon
        a(href='http://us.hitmanstat.us' title='switch region to US') US
    if region == 'US'
      #region-icon
        a(href='http://eu.hitmanstat.us' title='switch region to EU') EU
