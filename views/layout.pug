- var description = 'HITMAN status website provides the current status and incident reporting for the HITMAN online services.';

doctype html
html(lang='en')
  head
    title=title

    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description' content=description)
    meta(name='keywords' content='HITMAN, online, services, status')
    meta(property='og:type' content='website')
    meta(property='og:title' content=title)
    meta(property='og:description' content=description)
    meta(property='og:url' content='https://hitmanstat.us/')
    meta(property='og:image' content='https://hitmanstat.us/apple-touch-icon.png?v=3')
    meta(name='apple-mobile-web-app-title', content=title)
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='mobile-web-app-capable' content='yes')
    meta(name='application-name', content=title)
    meta(name='theme-color', content='#ffffff')

    link(rel='apple-touch-icon', sizes='180x180', href='/apple-touch-icon.png?v=3')
    link(rel='icon', type='image/png', sizes='32x32', href='/favicon-32x32.png?v=3')
    link(rel='icon', type='image/png', sizes='16x16', href='/favicon-16x16.png?v=3')
    link(rel='manifest', href='/manifest.json?v=3')
    link(rel='mask-icon', href='/safari-pinned-tab.svg?v=3', color='#495463')
    link(rel='shortcut icon', href='/favicon.ico?v=3')

    include includes/build/css

  body#main-page
    include header
    block content
    if path == '/'
      include footer
    include includes/build/javascript
